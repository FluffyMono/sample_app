<% provide(:title, 'Reset password') %>
<h1>Reset password</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, url: password_reset_path(params[:id])) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
      <%# 隠しフィールドとしてページ内に保存、sending email info along with other info %>
      <%= hidden_field_tag :email, @user.email %>
      <%# 再設定用のリンクをクリックしたとき,hidden_field_tagはメールアドレスをparams[:email]に保存
       f.hidden_field は params[:user][:email]に保存してしまう%>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.submit "Update password", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
